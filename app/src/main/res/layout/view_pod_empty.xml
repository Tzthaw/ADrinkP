<?xml version="1.0" encoding="utf-8"?>
<com.example.ptut.adrinkp.components.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/ivEmpty"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/empty_list"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data"
        android:textStyle="bold"
        android:textSize="@dimen/text_heading_2x"
        android:layout_below="@id/ivEmpty"
        android:textColor="@color/md_500_bluegrey"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cocktail Preview"
        android:textStyle="italic"
        android:textSize="@dimen/text_regular"
        android:layout_below="@id/tvEmpty"
        android:textColor="@color/md_500_bluegrey"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_centerHorizontal="true"
        />


</com.example.ptut.adrinkp.components.EmptyViewPod>