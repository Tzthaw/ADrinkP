<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="@dimen/margin_medium"
    android:clickable="true"
    android:layout_marginStart="@dimen/margin_small"
    android:foreground="@drawable/ripple_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/viewItem"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/viewImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@+id/viewItem"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_large"
            android:src="@drawable/oridinarydrink"
            android:tint="@color/orange" />

        <TextView
            android:id="@+id/viewText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/viewImage"
            android:layout_toStartOf="@+id/arrow"
            android:gravity="center"
            android:text="category"
            android:textColor="@color/md_500_bluegrey"
            android:textSize="@dimen/text_regular_3x" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_medium"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/md_700_bluegrey" />
    </RelativeLayout>
</android.support.v7.widget.CardView>